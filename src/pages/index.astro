---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
Empower local designers with the essential tools to achieve global excellence through the seamless integration of technology, genuine human connections, and unwavering authenticity.
`;
---

<Layout title="Welcome to Ardi">
  <ContextAlert class="mb-8" />

  <h1 class="mb-10">Empowering local designers</h1>
  <Markdown content={explainer} class="mb-10 text-lg" />

  <p class="mb-8">
    <a
      href="mailto:support@ardi.ae"
      style="
        display: inline-block;
        background-color: #F56722;
        color: #FFFFFF;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
      "
    >
      Contact Us
    </a>
  </p>

  <!-- Left-aligned Netlify Contact Form -->
  <form
    name="contact"
    method="POST"
    data-netlify="true"
    style="max-width:400px; margin:0; text-align:left; margin-bottom:4rem;"
  >
    <input type="hidden" name="form-name" value="contact" />

    <label for="email" class="block font-medium mb-1">Your Email</label>
    <input
      id="email"
      name="email"
      type="email"
      required
      style="width:100%; padding:8px; margin-bottom:1rem; border:1px solid #ccc; border-radius:4px;"
    />

    <label for="message" class="block font-medium mb-1">Message</label>
    <textarea
      id="message"
      name="message"
      rows="4"
      required
      style="width:100%; padding:8px; margin-bottom:1.5rem; border:1px solid #ccc; border-radius:4px;"
    ></textarea>

    <button
      type="submit"
      style="
        background-color: #F56722;
        color: #fff;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
      "
    >
      Send Message
    </button>
  </form>
</Layout>
